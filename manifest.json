{
    "name": "Web Video Transcript",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
    "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/index.css"],
            "js": ["js/button_start.js"]
        }
    ],
    "browser_action": {
        "default_popup": "button.html",
        "default_title": "Video Transcript",
        "default_icon": "apple-touch-icon.png",
        "popup": "shopcmp.htm"
    },
    "content_security_policy": "script-src 'self' https://www.youtube.com/ https://ajax.googleapis.com; object-src 'self'"
    
}